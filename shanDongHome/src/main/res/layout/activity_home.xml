<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shandong_launcher_bg1"
    tools:context=".HomeActivity" >

    <ImageView
        android:id="@+id/imginternet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="245dp"
        android:layout_marginTop="50dp"
        android:focusable="false" />

    <com.ihome.android.launcher2.TimeTextView
        android:id="@+id/tvtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="105dp"
        android:layout_marginTop="46dp"
        android:focusable="false"
        android:text="@string/time"
        android:textColor="#fff"
        android:textSize="24sp" />

    <HorizontalScrollView
        android:id="@+id/srcollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imglive"
                android:layout_width="347dp"
                android:layout_height="567dp"
                android:layout_marginLeft="60dp"
                android:focusable="true"
                android:onClick="onClick"
                android:src="@drawable/sl_live" />

            <ImageView
                android:id="@+id/imglookback"
                android:layout_width="347dp"
                android:layout_height="567dp"
                android:layout_marginLeft="27dp"
                android:focusable="true"
                android:onClick="onClick"
                android:src="@drawable/sl_back" />

            <ImageView
                android:id="@+id/imgdibbling"
                android:layout_width="347dp"
                android:layout_height="567dp"
                android:layout_marginLeft="27dp"
                android:focusable="true"
                android:onClick="onClick"
                android:src="@drawable/sl_dianbo" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="27dp" >

                <ImageView
                    android:id="@+id/imgstore"
                    android:layout_width="347dp"
                    android:layout_height="424dp"
                    android:focusable="true"
                    android:onClick="onClick"
                    android:src="@drawable/sl_store" />

                <ImageView
                    android:id="@+id/imgmyapplication"
                    android:layout_width="347dp"
                    android:layout_height="297dp"
                    android:layout_marginTop="269dp"
                    android:focusable="true"
                    android:onClick="onClick"
                    android:src="@drawable/sl_myapp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/imgplay"
                android:layout_width="347dp"
                android:layout_height="567dp"
                android:layout_marginLeft="27dp"
                android:focusable="true"
                android:onClick="onClick"
                android:src="@drawable/sl_play" />

            <ImageView
                android:id="@+id/imgsetting"
                android:layout_width="347dp"
                android:layout_height="567dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="60dp"
                android:focusable="true"
                android:onClick="onClick"
                android:src="@drawable/sl_setting" />
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>