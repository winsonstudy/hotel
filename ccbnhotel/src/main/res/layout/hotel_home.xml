    <anylife.scrolltextview.ScrollTextView
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="230dp"
        android:id="@+id/title_scroll"
        android:layout_width="350dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:focusable="false"
        customAttr:clickEnable="false"
        customAttr:isHorizontal="true"
        customAttr:speed="1"
        customAttr:text="@string/welcome"
        customAttr:textColor="@color/md_white_1000"
        customAttr:textSize="20sp" />

    <ImageView
        android:id="@+id/imginternet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="245dp"
        android:layout_marginTop="50dp"
        android:focusable="false" />

    <com.winson.ccbnhotel.TimeTextView
        android:id="@+id/tvtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="105dp"
        android:layout_marginTop="46dp"
        android:focusable="false"
        android:textColor="#fff"
        android:textSize="24sp" />

    <HorizontalScrollView
        android:id="@+id/srcollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imglive"
                android:layout_width="347dp"
                android:layout_height="567dp"
                android:layout_marginLeft="60dp"
                android:focusable="true"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/imglookback"
                android:layout_width="347dp"
                android:layout_height="567dp"
                android:layout_marginLeft="27dp"
                android:focusable="false"
                android:clickable="false"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgdibbling"
                android:layout_width="347dp"
                android:layout_height="567dp"
                android:layout_marginLeft="27dp"
                android:focusable="true"
                android:clickable="true"/>


            <ImageView
                android:id="@+id/imgplay"
                android:layout_width="347dp"
                android:layout_height="567dp"
                android:layout_marginLeft="27dp"
                android:focusable="true"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/imgsetting"
                android:layout_width="347dp"
                android:layout_height="567dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="60dp"
                android:focusable="true"
                android:clickable="true" />
        </LinearLayout>
    </HorizontalScrollView>

