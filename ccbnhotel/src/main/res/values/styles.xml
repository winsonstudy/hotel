<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<style name="AppTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ActionBackground">
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">324dp</item>
        <item name="android:layout_height">471dp</item>
        <!--<item name="android:layout_width">216dp</item>-->
        <!--<item name="android:layout_height">314dp</item>-->
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/action_bg_selector</item>
    </style>

    <style name="ActionCover">
        <item name="android:layout_width">246dp</item>
        <item name="android:layout_height">104dp</item>
        <item name="android:layout_marginBottom">45dp</item>
        <!--<item name="android:layout_width">164dp</item>-->
        <!--<item name="android:layout_height">69dp</item>-->
        <!--<item name="android:layout_marginBottom">30dp</item>-->
        <item name="android:layout_gravity">bottom|center_horizontal</item>
    </style>

    <style name="ActionText">
        <item name="android:layout_width">246dp</item>
        <item name="android:layout_height">297dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <!--<item name="android:layout_width">164dp</item>-->
        <!--<item name="android:layout_height">198dp</item>-->
        <!--<item name="android:layout_marginTop">16dp</item>-->
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ActionReflection">
        <item name="android:layout_width">246dp</item>
        <item name="android:layout_height">158dp</item>
        <!--<item name="android:layout_width">164dp</item>-->
        <!--<item name="android:layout_height">105dp</item>-->
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="MainText">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">26sp</item>
    </style>

</resources>
